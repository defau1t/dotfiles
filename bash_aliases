alias vim=vi
alias ls='ls -hN --color=auto --group-directories-first'
alias grep='grep --color=auto'
alias yt='youtube-dl --add-metadata -ic' # video link
alias yta='youtube-dl --add-metadata -xic' # only audio
alias YT='youtube-viewer'
alias speeddown='speedtest --secure --no-upload'
alias speedup='speedtest --secure --no-download'
